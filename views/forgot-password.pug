extends partials/layout

//- block append head
//-   - var title = 'Forgot Password'

block content
  section.section
    .columns.is-centered
      .column.is-half-tablet.is-one-third-desktop
        h1.title.has-text-centered Forgot Your Password?
        p.subtitle.is-6.has-text-centered.mb-4 Enter your email address and we'll send you a link to reset your password.
        if errors && errors.length > 0
          each error in errors
            .notification.is-danger.is-light= error.msg
        
        .box
          form(method="POST" action="/forgot-password")
            .field
              label.label(for="email") Email Address
              .control.has-icons-left
                input.input#email(type="email" name="email" placeholder="e.g. your.email@example.com" required value=typeof email !== 'undefined' ? email : '')
                span.icon.is-small.is-left
                  i.fas.fa-envelope
            .field.mt-5
              .control
                button.button.is-primary.is-fullwidth(type="submit") Send Password Reset Link
        hr
        p.has-text-centered Remember your password?
          a(href="/login")  Log In